<h1>記録一覧</h1>
<% @records.each do |record| %>
  <p>イベント名</p>
  <span><%= link_to record.event_name, record_path(record) %></span>
  <p>活動写真</p>
  <% if record.photo.attached? %>
    <%= image_tag url_for(record.photo.variant(resize_to_limit: [100, 100])) %>
  <% else %>
    <p>写真は添付されていません</p>
  <% end %>
  <p class="caption"><%= "#{record.comments.count} コメント" %></p>
<% end %>